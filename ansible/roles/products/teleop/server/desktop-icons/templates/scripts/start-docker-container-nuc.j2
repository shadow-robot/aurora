#!/bin/bash
NUC_NAME={{ nuc_name }}
NUC_ADDRESS={{ nuc_address }}

ssh $NUC_NAME@$NUC_ADDRESS CONTAINER={{ container_name }} SR_BRANCH={{ sr_config_branch }} 'bash -s' <<'ENDSSH'
docker stop ${CONTAINER}
docker start ${CONTAINER}
docker exec ${CONTAINER} bash -c "source /home/user/projects/shadow_robot/base_deps/devel/setup.bash;source /home/user/projects/shadow_robot/base/devel/setup.bash;roscd sr_config;git checkout ${SR_BRANCH}"
docker exec ${CONTAINER} bash -c "source /home/user/projects/shadow_robot/base_deps/devel/setup.bash;source /home/user/projects/shadow_robot/base/devel/setup.bash;roslaunch sr_robot_launch hardware_control_loop.launch 2> >(tee -a ~/.ros/log/stderr.log >&2)"
ENDSSH
sleep infinity
