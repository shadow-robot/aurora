#!/bin/bash
entrypoint_path=$(docker inspect -f '{{.Config.Entrypoint}}' {{ container_name  }} | sed -r 's/\[//g' | sed -r 's/\]//g')
docker start {{ container_name  }} &> /dev/null
while [[ $(ps aux | grep ${entrypoint_path} | grep -v grep | wc -l) -gt 0 ]]; do sleep 1; done && docker stop {{ container_name  }} &> /dev/null && exit 0 || docker stop {{ container_name  }} &> /dev/null && exit 1
