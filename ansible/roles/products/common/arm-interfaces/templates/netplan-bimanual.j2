network:
    ethernets:
        right_arm:
            addresses: [192.168.1.100/24]
            optional: true
            match:
                macaddress: {{ ethercat_right_arm_mac }}
            routes:
                - to: 192.168.1.1/32
                  via: 192.168.1.1
            set-name: right_arm
        left_arm:
            addresses: [192.168.2.100/24]
            optional: true
            match:
                macaddress: {{ ethercat_left_arm_mac }}
            routes:
                - to: 192.168.2.1/32
                  via: 192.168.2.1
            set-name: left_arm
        enx-usb-ethernet:
            match:
                name: enx*
            dhcp4: true
            optional: true
    version: 2
