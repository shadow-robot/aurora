#!/bin/bash
set -e
RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color
IMAGE= {{ full_image_name }}
CID=$(docker ps -a | grep $IMAGE | awk '{print $1}')
docker pull $IMAGE

LATEST=`docker inspect --format "{{.Id}}" $IMAGE`
RUNNING=`docker inspect --format "{{.Image}}" $CID`
NAME=`docker inspect --format '{{.Name}}' $CID | sed "s/\///g"`
echo "Latest:" $LATEST
echo "Running:" $RUNNING
if [ "$RUNNING" != "$LATEST" ];then
    echo -e "A new image has been released and pulled from Shadow Robot. Please re-run the one-liner with the additional argument: ${GREEN}reinstall=true${NC} to upgrade your container. ${RED}Note that you will lose all your data! ${NC} \nPress enter to continue "
    read -p
else
    echo "$NAME up to date"
fi
